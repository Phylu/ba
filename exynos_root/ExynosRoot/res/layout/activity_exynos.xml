<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ScrollView01" android:layout_width="fill_parent"
            android:layout_height="fill_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/text_exynos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_exynos" />

    <Button
        android:id="@+id/buttonExynos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_exynos"
        android:layout_below="@+id/text_exynos"
        android:layout_marginTop="21dp"
        android:text="@string/button_root" />
    
   <Button
        android:id="@+id/buttonData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonExynos"
        android:layout_alignBottom="@+id/buttonExynos"
        android:layout_toRightOf="@+id/buttonExynos"
        android:text="@string/button_data" />

    <Button
        android:id="@+id/buttonWlanPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_uid"
        android:layout_toRightOf="@+id/buttonData"
        android:text="@string/button_wlan_pass" />

        <TextView
        android:id="@+id/text_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonExynos"
        android:layout_alignRight="@+id/text_exynos"
        android:layout_below="@+id/buttonExynos"
        android:layout_marginTop="16dp"
        android:text="" />
    
    <TextView
        android:id="@+id/text_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonExynos"
        android:layout_alignRight="@+id/text_exynos"
        android:layout_below="@+id/text_uid"
        android:layout_marginTop="16dp"
        android:text="" />

</RelativeLayout>

</ScrollView>